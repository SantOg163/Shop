<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navs.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container ">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Shop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="margin-left:5px;margin-right:5px;">
                            <div class="dropdown">
                            <a class="nav-link text-dark " asp-area="" asp-page="/Index">Бренды</a>
                                <div class="dropdown-content vw-100 ">
                                    <div class="header-sublist _active-hover ">
                                        <a class="nav-link text-dark " style="display:inline-block;" href="#">Link 1</a>
                                        <a class="nav-link text-dark " style="display:inline-block;" href="#">Link 2</a>
                                        <a class="nav-link text-dark " style="display:inline-block;" href="#">Link 3</a>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item" style="margin-left:5px;margin-right:5px;">
                            <div class="dropdown">
                                <a class="nav-link text-dark " asp-area="" asp-page="/ForShop/Products?gender=men" asp-route-gender="women">Мужское</a>
                                <div class="dropdown-content vw-100">
                                    <div class="header-sublist _active-hover">
                                        <a class="nav-link text-dark " style="display:inline-block" href="#">Link 1</a>
                                        <a class="nav-link text-dark " style="display:inline-block" href="#">Link 2</a>
                                        <a class="nav-link text-dark " style="display:inline-block" href="#">Link 3</a>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item" style="margin-left:5px;margin-right:5px;">
                            <div class="dropdown">
                                <a class="nav-link text-dark " asp-area="" asp-page="/ForShop/Products?gender=women" asp-route-gender="women">Женское</a>
                                <div class="dropdown-content vw-100">
                                    <div class="header-sublist _active-hover">
                                        <a class="nav-link text-dark " style="display:inline-block" href="#">Link 1</a>
                                        <a class="nav-link text-dark " style="display:inline-block" href="#">Link 2</a>
                                        <a class="nav-link text-dark " style="display:inline-block" href="#">Link 3</a>
                                    </div>
                            </div>
                        </li>
                        <li class="nav-item" style="margin-left:5px;margin-right:5px;">
                            <div class="dropdown">
                            <a class="nav-link text-dark " asp-area="" asp-page="/Privacy">Аксессуары</a>
                                <div class="dropdown-content vw-100">
                                    <div class="header-sublist _active-hover">
                                        <a class="nav-link text-dark " style="display:inline-block" href="#">Link 1</a>
                                        <a class="nav-link text-dark " style="display:inline-block" href="#">Link 2</a>
                                        <a class="nav-link text-dark " style="display:inline-block" href="#">Link 3</a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Shop - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>